<AnchorPane maxHeight="600.0" maxWidth="800.0" minHeight="600.0" minWidth="800.0" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="coffeeclicker.GameController">
   <children>
      <MenuBar prefWidth="800.0">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
                  <MenuItem mnemonicParsing="false" onAction="#handleReturnToMenu" text="Return to Menu" />
                  <MenuItem mnemonicParsing="false" onAction="#handleSave" text="Save Game" />
              <MenuItem mnemonicParsing="false" onAction="#handleGameExitAction" text="Exit" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <HBox alignment="TOP_CENTER" layoutY="500.0" prefHeight="100.0" prefWidth="800.0" spacing="10.0">
         <children>
            <VBox>
               <children>
                  <HBox spacing="10.0">
                     <children>
                        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="10.0">
                           <children>
                              <Button fx:id="upgradeButton1" mnemonicParsing="false" onAction="#handleUpgradeClick" text="Upgrade 1" />
                              <Label fx:id="upgradeLabel1" text="10" />
                           </children>
                        </VBox>
                        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="10.0">
                           <children>
                              <Button fx:id="upgradeButton2" mnemonicParsing="false" onAction="#handleUpgradeClick" text="Upgrade 2" />
                              <Label fx:id="upgradeLabel2" text="100" />
                           </children>
                        </VBox>
                        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="10.0">
                           <children>
                              <Button fx:id="upgradeButton3" mnemonicParsing="false" onAction="#handleUpgradeClick" text="Upgrade 3" />
                              <Label fx:id="upgradeLabel3" text="1000" />
                           </children>
                        </VBox>
                        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="10.0">
                           <children>
                              <Button fx:id="upgradeButton4" mnemonicParsing="false" onAction="#handleUpgradeClick" text="Upgrade 4" />
                              <Label fx:id="upgradeLabel4" text="10000" />
                           </children>
                        </VBox>
                        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="10.0">
                           <children>
                              <Button fx:id="upgradeButton5" mnemonicParsing="false" onAction="#handleUpgradeClick" text="Upgrade 5" />
                              <Label fx:id="upgradeLabel5" text="100000" />
                           </children>
                        </VBox>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </HBox>
      <HBox id="counterLabelID" alignment="CENTER" layoutY="100.0" prefWidth="800.0">
         <children>
            <VBox alignment="CENTER">
               <children>
                  <Label id="counterLabel" fx:id="counterLabel">
                     <padding>
                        <Insets bottom="35.0" />
                     </padding>
                     <font>
                        <Font name="Comic Sans MS" size="15.0" />
                     </font>
                  </Label>
                  <Button fx:id="coffeeButton" alignment="CENTER" contentDisplay="GRAPHIC_ONLY" mnemonicParsing="false" onAction="#handleCoffeeClick" textAlignment="CENTER" />
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</AnchorPane>
